<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <servlet>
    <servlet-name>BookServlet</servlet-name>
    <servlet-class>com.bookapp.servlet.BookServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BookServlet</servlet-name>
    <url-pattern>/book</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ListAllBook</servlet-name>
    <servlet-class>com.bookapp.servlet.ListAllBook</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ListAllBook</servlet-name>
    <url-pattern>/book/all</url-pattern>
  </servlet-mapping>
</web-app>

